<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/shape_brown_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivItemCartViewHolderCart"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="4dp"
            android:contentDescription="@string/item_cart"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <ImageView
            android:id="@+id/icCloseItemViewHolderCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/close"
            android:src="@drawable/close"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitleItemCartViewHolderCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/ivItemCartViewHolderCart"
            app:layout_constraintTop_toTopOf="@+id/ivItemCartViewHolderCart" />


        <TextView
            android:id="@+id/tvPriceItemViewHolderCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="$0"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvTitleItemCartViewHolderCart"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleItemCartViewHolderCart"
            app:layout_constraintBottom_toTopOf="@+id/tvMiniumItemViewHolderCart"/>

        <TextView
            android:id="@+id/tvMiniumItemViewHolderCart"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_orange_bg"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivItemCartViewHolderCart"
            app:layout_constraintStart_toStartOf="@+id/tvTitleItemCartViewHolderCart" />


        <TextView
            android:id="@+id/tvNumberItemViewHolderCart"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="0"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toStartOf="@+id/tvPlusItemViewHolderCart"
            app:layout_constraintTop_toTopOf="@+id/tvMiniumItemViewHolderCart"
            app:layout_constraintBottom_toBottomOf="@+id/tvMiniumItemViewHolderCart"
            app:layout_constraintStart_toEndOf="@+id/tvMiniumItemViewHolderCart" />

        <TextView
            android:id="@+id/tvPlusItemViewHolderCart"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/shape_orange_bg"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/tvMiniumItemViewHolderCart"
            app:layout_constraintBottom_toBottomOf="@+id/tvMiniumItemViewHolderCart"
            app:layout_constraintStart_toEndOf="@+id/tvNumberItemViewHolderCart" />

        <TextView
            android:id="@+id/tvTotalItemViewHolderCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>