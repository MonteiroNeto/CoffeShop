<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="250dp"
    android:layout_margin="4dp"
    android:background="@drawable/shape_brown_bg">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeIvViewHolderPopular"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/popular_coffees"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvTitleViewHolderPopular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shapeIvViewHolderPopular"
        app:layout_constraintStart_toStartOf="@+id/shapeIvViewHolderPopular"
        app:layout_constraintEnd_toEndOf="@+id/shapeIvViewHolderPopular"
        android:text="Title"
        android:layout_marginStart="8dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tvExtraViewHolderPopular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleViewHolderPopular"
        app:layout_constraintStart_toStartOf="@+id/shapeIvViewHolderPopular"
        app:layout_constraintEnd_toStartOf="@+id/ivAddViewHolderPopular"
        android:text="description"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tvPriceViewHolderPopular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvExtraViewHolderPopular"
        app:layout_constraintStart_toStartOf="@+id/shapeIvViewHolderPopular"
        app:layout_constraintEnd_toStartOf="@+id/ivAddViewHolderPopular"
        android:text="â‚¬-"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:id="@+id/ivAddViewHolderPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:src="@drawable/plus"
        android:contentDescription="@string/add"
        />
</androidx.constraintlayout.widget.ConstraintLayout>