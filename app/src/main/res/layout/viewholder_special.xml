<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_brown_bg"
    android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeIvSpecialViewHolderSpecial"
        app:shapeAppearance="@style/CircleImageView"
        android:layout_width="145dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/coffee"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tvTitleViewHolderSpecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coffee"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/shapeIvSpecialViewHolderSpecial"
        app:layout_constraintLeft_toRightOf="@+id/shapeIvSpecialViewHolderSpecial"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        />

    <RatingBar
        android:id="@+id/ratingBarSpecialViewHolderSpecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/shapeIvSpecialViewHolderSpecial"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleViewHolderSpecial"
        android:layout_marginStart="16dp"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:rating="4"
        android:progressTint="@color/orange"
        android:numStars="5"
        />

    <TextView
        android:id="@+id/tvPriceViewHolderSpecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$-"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ratingBarSpecialViewHolderSpecial"
        app:layout_constraintLeft_toRightOf="@+id/shapeIvSpecialViewHolderSpecial"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>